<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="50px"
        android:layout_marginBottom="50px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="200px"
            android:layout_height="300px"
            android:src="@drawable/demo_image_clothing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:fontFamily="@font/rufina"
                android:tag="50"
                android:layout_marginBottom="10px"
                android:layout_marginRight="25px"
                android:text="BOTTEGA VENETA"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="50px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:fontFamily="@font/rubik_light"
                android:tag="42"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="25px"
                android:text="lorem ipsum simply dummy text"
                android:textColor="#757575"
                android:singleLine="true"
                android:textSize="42px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginLeft="10px"
                android:fontFamily="@font/rubik_light"
                android:tag="50"
                android:text="SAR 1200"
                android:layout_marginRight="25px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="50px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:fontFamily="@font/rubik_light"
                android:tag="42"
                android:layout_marginTop="10px"
                android:layout_marginLeft="10px"
                android:text="Remove from favourite"
                android:textColor="#757575"
                android:singleLine="true"
                android:layout_marginRight="25px"
                android:textSize="42px" />

            <View
                android:layout_width="435px"
                android:layout_height="1.2px"
                android:layout_marginLeft="5px"
                android:layout_gravity="left"
                android:background="#666666" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@+id/main_root"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="#D6D6D6" />
</RelativeLayout>