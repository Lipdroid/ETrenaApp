<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200px"
            android:layout_height="350px"
            android:layout_marginRight="20px"
            android:src="@drawable/demo_image_clothing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="45px"
                android:fontFamily="@font/rufina"
                android:singleLine="true"
                android:tag="50"
                android:text="BOTTEGA VENETA"
                android:textColor="@color/black"
                android:textSize="50px" />

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="25px"
                android:fontFamily="@font/rubik_light"
                android:singleLine="true"
                android:tag="42"
                android:text="lorem ipsum simply dummy text"
                android:textColor="#757575"
                android:textSize="42px" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="25px"
                android:layout_marginTop="10px"
                android:fontFamily="@font/rubik_light"
                android:singleLine="true"
                android:tag="50"
                android:text="SAR 1200"
                android:textColor="@color/black"
                android:textSize="50px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="25px"
                android:layout_marginTop="20px"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_attribute_name"
                        android:layout_width="100px"
                        android:layout_height="50px"
                        android:fontFamily="@font/rubik_light"
                        android:singleLine="true"
                        android:tag="42"
                        android:text="Size:"
                        android:textColor="#757575"
                        android:textSize="42px" />

                    <TextView
                        android:id="@+id/tv_attribute_value"
                        android:layout_width="match_parent"
                        android:layout_height="50px"
                        android:fontFamily="@font/rubik"
                        android:singleLine="true"
                        android:tag="45"
                        android:text="18"
                        android:textColor="@color/black"
                        android:textSize="45px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180px"
                        android:layout_height="50px"
                        android:fontFamily="@font/rubik_light"
                        android:singleLine="true"
                        android:tag="42"
                        android:text="Quantity:"
                        android:textColor="#757575"
                        android:textSize="42px" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/et_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0px"
                            android:layout_weight="1"
                            android:background="@drawable/black_rounded_corner"
                            android:editable="false"
                            android:fontFamily="@font/roboto"
                            android:hint="01"
                            android:paddingLeft="30px"
                            android:text="01"
                            android:tag="45"
                            android:textColor="@color/black"
                            android:textSize="45px"
                            android:typeface="normal" />

                        <ImageView
                            android:layout_width="45px"
                            android:layout_height="25px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10px"
                            android:layout_marginTop="25px"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_downarrow_black" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="35px"
        android:layout_height="35px"
        android:layout_marginRight="70px"
        android:layout_marginTop="80px"
        android:layout_alignParentRight="true"
        android:src="@drawable/cross_icon_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_below="@+id/main_root"
        android:background="#D6D6D6" />
</RelativeLayout>