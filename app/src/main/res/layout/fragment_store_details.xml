<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.dtmweb.etrendapp.fragments.MyStoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:scaleType="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="#D4D4D4" />

        <LinearLayout
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="420px"
            android:layout_marginBottom="0px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="-100px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.dtmweb.etrendapp.customViews.CircleImageView
                    android:id="@+id/pro_image"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="0px"
                    android:src="@drawable/default_profile_image_shop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="10px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10px"
                        android:layout_marginRight="10px"
                        android:fontFamily="@font/rubik"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="60"
                        android:text="The Pefume Zone"
                        android:textColor="#666666"
                        android:textSize="60px"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10px"
                        android:fontFamily="@font/rubik_light"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="39"
                        android:text="+09 333 33 333"
                        android:textColor="#666666"
                        android:textSize="39px" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10px"
                        android:fontFamily="@font/rubik_light"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="39"
                        android:text="33 King Road,Riyad"
                        android:textColor="#666666"
                        android:textSize="39px" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:gravity="center"
                android:horizontalSpacing="10px"
                android:numColumns="2"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="20px" />

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>
