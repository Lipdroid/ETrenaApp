<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.dtmweb.etrenaapp.fragments.ChoosePaymentTypeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250px"
                    android:layout_below="@+id/product_pager"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="0px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_image"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90px"
                            android:layout_marginBottom="10px"
                            android:layout_marginLeft="10px"
                            android:layout_marginRight="10px"
                            android:layout_marginTop="0px"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="90px"
                                android:layout_marginBottom="0px"
                                android:layout_marginLeft="0px"
                                android:layout_marginRight="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/rufina"
                                android:gravity="left|top"
                                android:singleLine="true"
                                android:tag="70"
                                android:text="BOTTEGA VENETA"
                                android:textColor="@color/black"
                                android:textSize="70px" />

                            <ImageView
                                android:layout_width="75px"
                                android:layout_height="66px"
                                android:layout_margin="15px"
                                android:src="@drawable/fav_icon" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60px"
                            android:layout_marginBottom="10px"
                            android:layout_marginLeft="13px"
                            android:layout_marginRight="10px"
                            android:fontFamily="@font/rubik_light"
                            android:singleLine="true"
                            android:tag="42"
                            android:text="lorem ipsum simply dummy text"
                            android:textColor="#757575"
                            android:textSize="42px" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90px"
                            android:layout_marginBottom="10px"
                            android:layout_marginLeft="13px"
                            android:layout_marginRight="15px"
                            android:layout_marginTop="0px"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60px"
                                android:layout_weight="1"
                                android:fontFamily="@font/rubik_light"
                                android:singleLine="true"
                                android:tag="48"
                                android:text="The Fashion Shop"
                                android:textColor="#262626"
                                android:textSize="48px" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60px"
                                android:layout_weight="1"
                                android:fontFamily="@font/rubik_light"
                                android:gravity="right"
                                android:singleLine="true"
                                android:tag="48"
                                android:text="SAR 1200"
                                android:textColor="@color/black"
                                android:textSize="48px" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/product_pager"
                    android:layout_width="match_parent"
                    android:layout_height="900px"></android.support.v4.view.ViewPager>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_below="@+id/product_pager"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="0px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105px"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="0px"
                    android:layout_marginRight="0px"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/btn_gray_white_selector"
                        android:layout_weight="1">

                        <com.dtmweb.etrenaapp.customViews.ValueSelector
                            android:id="@+id/valueSelector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></com.dtmweb.etrenaapp.customViews.ValueSelector>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="975px"
                            android:layout_height="105px"
                            android:layout_marginLeft="10px"
                            android:layout_weight="1"
                            android:background="@drawable/btn_gray_white_selector"
                            android:editable="false"
                            android:fontFamily="@font/raleway"
                            android:hint="COLOR"
                            android:paddingLeft="30px"
                            android:tag="45"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/darker_gray"
                            android:textSize="45px"
                            android:typeface="normal" />

                        <ImageView
                            android:layout_width="45px"
                            android:layout_height="25px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30px"
                            android:layout_marginTop="45px"
                            android:scaleType="fitXY"
                            android:src="@drawable/downarrow" />
                    </RelativeLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="0px"
                    android:layout_marginTop="10px"
                    android:background="@drawable/btn_gray_white_selector"
                    android:fontFamily="@font/roboto_light"
                    android:paddingLeft="33px"
                    android:tag="42"
                    android:text="ADD TO BAG"
                    android:textAllCaps="true"
                    android:textColor="@color/darker_gray"
                    android:textSize="42px" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
