<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.dtmweb.etrendapp.fragments.AddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="450px"
            android:layout_height="72px"
            android:layout_marginTop="30px"
            android:src="@drawable/icon_title_delivery" />

        <EditText
            android:layout_width="975px"
            android:layout_height="105px"
            android:layout_marginTop="50px"
            android:background="@drawable/black_rounded_corner"
            android:fontFamily="@font/roboto_light"
            android:hint="Address"
            android:paddingLeft="30px"
            android:tag="45"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/black"
            android:textSize="45px"
            android:typeface="normal" />

        <EditText
            android:layout_width="975px"
            android:layout_height="105px"
            android:layout_marginTop="30px"
            android:layout_marginBottom="20px"
            android:background="@drawable/black_rounded_corner"
            android:fontFamily="@font/roboto_light"
            android:hint="Phone Number"
            android:paddingLeft="30px"
            android:tag="45"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/black"
            android:textSize="45px"
            android:typeface="normal" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginTop="50px"
            android:background="#D6D6D6" />

        <ImageView
            android:layout_width="450px"
            android:layout_height="72px"
            android:layout_marginTop="50px"
            android:src="@drawable/icon_title_billing" />

        <RelativeLayout
            android:layout_width="975px"
            android:layout_marginTop="50px"
            android:layout_height="105px">

            <EditText
                android:layout_width="975px"
                android:layout_height="105px"
                android:layout_marginLeft="0px"
                android:layout_weight="1"
                android:background="@drawable/black_rounded_corner"
                android:fontFamily="@font/roboto_light"
                android:hint="01"
                android:paddingLeft="30px"
                android:text="Address"
                android:tag="45"
                android:textColor="@color/black"
                android:textSize="45px"
                android:typeface="normal" />

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_marginTop="25px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_refresh" />
        </RelativeLayout>

        <EditText
            android:layout_width="975px"
            android:layout_height="105px"
            android:layout_marginTop="30px"
            android:background="@drawable/black_rounded_corner"
            android:fontFamily="@font/roboto_light"
            android:hint="Phone Number"
            android:paddingLeft="30px"
            android:tag="45"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/black"
            android:textSize="45px"
            android:typeface="normal" />

        <Button
            android:id="@+id/btn_go"
            android:layout_width="330px"
            android:layout_height="90px"
            android:layout_marginTop="80px"
            android:background="@drawable/black_rounded_corner"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:tag="45"
            android:text="Go"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="45px"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>
