<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dtmweb.etrenaapp.fragments.MyStoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:scaleType="center"
            android:src="@drawable/test_my_store_cover" />

        <LinearLayout
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="420px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="-100px"
            android:layout_marginBottom="0px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.dtmweb.etrenaapp.customViews.CircleImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="0px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/default_profile_image_shop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="10px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik"
                        android:singleLine="true"
                        android:tag="60"
                        android:gravity="center"
                        android:layout_marginRight="10px"
                        android:text="The Pefume Zone"
                        android:textColor="#666666"
                        android:textSize="60px"
                        android:layout_marginBottom="10px"
                        android:typeface="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_light"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_marginRight="10px"
                        android:tag="39"
                        android:text="+09 333 33 333"
                        android:textColor="#666666"
                        android:textSize="39px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_light"
                        android:singleLine="true"
                        android:layout_marginRight="10px"
                        android:tag="39"
                        android:gravity="center"
                        android:text="33 King Road,Riyad"
                        android:textColor="#666666"
                        android:textSize="39px" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:gravity="center"
            android:horizontalSpacing="10px"
            android:numColumns="2"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20px" />
    </LinearLayout>


</FrameLayout>
