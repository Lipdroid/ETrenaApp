<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/white"
    tools:context="com.dtmweb.etrendapp.ChoosePlanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_margin="40px"
            android:background="#F2F2F2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="170px"
                android:layout_height="170px"
                android:layout_marginLeft="48px"
                android:scaleType="fitXY"
                android:src="@drawable/default_profile_image_shop" />

            <LinearLayout
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="-10px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:tag="54"
                    android:text="The Fashion Shop"
                    android:textColor="#474747"
                    android:textSize="54px"
                    android:typeface="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:singleLine="true"
                    android:tag="39"
                    android:text="+09 333 33 333"
                    android:textColor="#474747"
                    android:textSize="39px"
                    android:typeface="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:singleLine="true"
                    android:tag="39"
                    android:text="Riyad,Saudi Arabia"
                    android:textColor="#474747"
                    android:textSize="39px"
                    android:typeface="normal" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="25px"
            android:layout_marginTop="10px"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:tag="50"
            android:text="Pay Monthly Subscription"
            android:textColor="@color/darker_gray"
            android:textSize="50px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="30px"
            android:background="#F2F2F2"
            android:fontFamily="@font/roboto_light"
            android:gravity="left|center"
            android:paddingLeft="30px"
            android:singleLine="true"
            android:tag="42"
            android:text="SAR 300/Monthly"
            android:textColor="#FF0000"
            android:textSize="42px" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="10px"
        android:background="@drawable/btn_gray_white_selector"
        android:fontFamily="@font/roboto_light"
        android:paddingLeft="33px"
        android:layout_marginBottom="100px"
        android:tag="42"
        android:layout_alignParentBottom="true"
        android:text="PAY"
        android:textAllCaps="true"
        android:textColor="@color/darker_gray"
        android:textSize="42px" />
</RelativeLayout>
